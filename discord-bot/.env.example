# Discord Bot Configuration
# CRITICAL: Keep these values secret and never commit to version control
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN
CLIENT_ID=YOUR_DISCORD_APP_CLIENT_ID
GUILD_ID=YOUR_DEVELOPMENT_GUILD_ID

# Security Settings
NODE_ENV=production
DEBUG=false

# Rate Limiting (optional - for future implementation)
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000

# Optional: Logging level (error, warn, info, debug)
LOG_LEVEL=warn

# SECURITY REMINDERS:
# - Never share your DISCORD_TOKEN
# - Use environment-specific .env files
# - Regularly rotate your bot token
# - Monitor bot permissions and audit logs